{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES5",
    "outDir": "../build/",
    "removeComments": true,
    "sourceMap": true,
    "watch": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strict": true,
    "lib": ["es2021", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "paths": {
      "types/*": ["types/*"],
      "lang/*": ["lang/*"]
    }
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules"],
  "include": ["./src/"]
}
